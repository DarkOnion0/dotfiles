#bindsym $mod+w exec --no-startup-id rofi -combi-modi window,drun,ssh -theme solarized -font "hack 10" -show combi -icon-theme "Papirus" -show-icons
bindsym $mod+d exec --no-startup-id rofi -show drun -icon-theme "Papirus" -show-icons
bindsym $mod+Shift+d exec --no-startup-id rofi -show window -icon-theme "Papirus" -show-icons

# launch flameshot
bindsym $mod+p exec flameshot gui

# Lock the screen
bindsym $mod+l exec bash ~/.config/i3/bin/lock.bash

