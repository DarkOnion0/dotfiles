exec_always --no-startup-id nix-shell -p file imagemagick --command "bash ~/.config/i3/bin/wallpaper.bash"	    # launch random background
exec_always --no-startup-id picom -b															                # launch the compositor
exec_always --no-startup-id $HOME/Programmation/git/dotfiles/home/.config/polybar/launch.sh		                # launch polybar
exec_always --no-startip-id nm-applet															                # launch a little applet to manage internet conenction
exec --no-startup-id corectrl																	                # launch corectrl for managing my GPU
exec --no-startip-id flameshot																	                # launch my screen capture application
exec --no-startip-id keepassxc																	                # launch my password manager
exec --no-startip-id ferdi																		                # launch ferdi to manage all my webservice apps like protonmail or notion

